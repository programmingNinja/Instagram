<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rlContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal">

    <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdvProfileImage"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:actualImageScaleType="fitCenter"
            app:placeholderImage="@drawable/gray_oval"
            app:roundAsCircle="true" />

    <LinearLayout
            android:id="@+id/llBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/sdvProfileImage"
            android:layout_toRightOf="@id/sdvProfileImage"
            android:layout_toEndOf="@id/sdvProfileImage"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:orientation="vertical" >

        <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_text"
                android:fontFamily="sans-serif"
                android:hint="@string/hint_username"
                android:layout_marginTop="4dp"
                android:lineSpacingMultiplier="1.2"
                android:textSize="14sp" />

        <TextView
                android:id="@+id/tvFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_gray_text"
                android:ellipsize="end"
                android:gravity="end"
                android:maxLines="1"
                android:hint="@string/hint_timestamp"
                android:fontFamily="sans-serif"
                android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>